<div id="postDeleteDialog" uk-modal>
    <div class="uk-modal-dialog relative mx-auto bg-[#11001c] shadow-xl rounded-lg w-[400px]">
        @*Header*@
        <div class="p-6">
            <h2 class="text-2xl font-semibold !text-white">Delete Post</h2>
        </div>
        @*Body*@
        <div class="p-6 py-0">
            <p class="font-normal !text-white">Are you sure you want to delete this post?</p>
        </div>
        @*Footer*@
        <div class="flex justify-end p-6 text-sm font-medium">
            <form asp-controller="Home" asp-action="PostDelete">
                <input type="hidden" name="postId" id="deleteDialogPostId" value="" />
                <button type="button" class="bg-[#3a015c] hover:bg-[#1c0d28] text-white py-2 px-8 rounded-lg text-sm font-medium transition-all uk-modal-close">Cancel</button>
                <button type="submit" class="-bottom-1 bg-red-500 hover:bg-red-600 text-white py-2 px-8 rounded-lg text-sm font-medium transition-all">Delete</button>
            </form>
        </div>

        <button type="button" class="text-[#3a015c] text-2xl uk-modal-close absolute right-0 top-0 m-3">
            <ion-icon name="close"></ion-icon>
        </button>

    </div>

</div>






